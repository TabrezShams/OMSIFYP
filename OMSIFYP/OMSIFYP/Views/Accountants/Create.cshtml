@using (Html.BeginForm("Create", "Accountants", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal">
        <marquee style="font-family:cursive; color:blue"> Read this form carefully and provide suitable and correct information</marquee>
        <hr />

        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="text-center">
                        <span class="text-left">Fill with Appropriate info</span>
                        <span class="col-lg-offset-3"><b>1.	Personal Info</b></span>
                    </span>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-6">

                            <label> First Name</label>
                            <input type="text" name="FirstMidName" required class="form-control" placeholder="First Name" />
                            @*@Html.EditorFor(model => model.FirstMidName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name" } })*@
                            @Html.ValidationMessageFor(model => model.FirstMidName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-6">
                            <label> Last Name</label>
                            <input type="text" name="LastName" required class="form-control" placeholder="Last Name" title="Last Name Required" />
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>
                        <br>
                        <div class="col-xs-6">
                            <br>
                            <label>Father Name</label>
                            <input type="text" name="father" required class="form-control" placeholder="Father Name" />
                            @Html.ValidationMessageFor(model => model.father, "", new { @class = "text-danger" })

                        </div>
                        <br>
                        <div class="col-xs-6">
                            <br>
                            <label> <b>CNIC</b></label>
                            <input type="text" name="personcnic" required id="CNIC" placeholder="XXXXX-XXXXX-X" maxlength="15" size="15" class="form-control">
                            @Html.ValidationMessageFor(model => model.personcnic, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-xs-6">
                            <br>
                            <label> <b>Nationality</b></label>
                            <input type="text" name="nationality" required class="form-control" placeholder="Nationality" />
                            @Html.ValidationMessageFor(model => model.nationality, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-xs-6">
                            <br>
                            <label>Date of Birth</label>
                            <input type="date" required name="datebirth" value="" class="form-control" />

                            <br><br>
                        </div>
                        <div class="col-xs-6">
                            <table width="395" border="0">
                                <tr>
                                    <td width="70"><strong>Gender :</strong></td>
                                    <td width="35"><strong>Male </strong></td>
                                    <td width="30">@Html.RadioButton("Gender", "Male") </td>
                                    <td width="45"><strong>Female</strong></td>
                                    <td width="42">@Html.RadioButton("Gender", "Female")</td>
                                </tr>
                            </table>
                        </div>

                        <div class="col-xs-4">
                            <lable><b>Blood Group</b></lable>
                            <select class="list-group-item-text" typeof="text" name="blood" required style="height:25px;width:100px">
                                <option value="">-- Select --</option>
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                            </select>


                        </div>

                    </div>

                    <br>

                </div>
            </div>
        </div>

