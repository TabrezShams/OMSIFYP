        $(document).ready(function () {

       $("#CNIC").keyup(function (e)
       {

          if (e.keyCode != 15) {
              if ($(this).val().length ==5) {
                  $(this).val($(this).val() + "-");
              }
               else if ($(this).val().length ==13) {
                  $(this).val($(this).val()+"-");

               }

          }
       });
       $("#pho").keyup(function (e) {

           if (e.keyCode !=13) {
               if ($(this).val().length == 4) {
                   $(this).val($(this).val() + "-");
               }


           }
       });
   });

