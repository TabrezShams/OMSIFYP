@model OMSIFYP.ViewModels.InstructorIndexData

@{
    ViewBag.Title = "Instructors";
}<br>

<link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet" href="~/css/multilpe-select.css">
<link type="text/css" rel="stylesheet" href="~/css/style.css">

<style>

    input[type=text] {
    width: 150px;
    -webkit-transition: width 0.4s ease-in-out;
    transition: width 0.4s ease-in-out;
    height:40px;
}

/* When the input field gets focus, change its width to 100% */
input[type=text]:focus {
    width: 50%;
}


</style>

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <span class="text-center">
                <div align="center"><p><h2>All Instructors</h2></p></div>
               
            </span>
        </div>

        <div class="panel-body">

            <div class="row">
                <table  width="1000" >
                    <tr><td>&nbsp;</td>
                        <td colspan="6" class="31" align="left">@Html.ActionLink("Add New Instructor", "Create", "Instructor", null, new { @class = "btn btn-success btn-large" })</td>
                        <td colspan="2" align="right">
                            @using (Html.BeginForm("Index", "Instructor", FormMethod.Get))
                        {
                            <p>
                               <b>
                                            <input type="text" name="searchName" placeholder="   Search By Name   ">
                                   </b>    
                                 
                            </p>
                        }
                    </td>
                </tr>

                </table>

                <table class="table" >
                 
            

                    <tr>
                        <th>
                            <h4>No.</h4>
                        </th>
                        <th width="20"></th>
                        <th > <div align="left"><h4>First Name</h4></div></th>
                        <th><div align="left"> <h4>Last Name</h4></div></th>
                        <th><div align="center"> <h4>Hire Date</h4></div></th>
                        <th width="20"></th>
                        <th width="220"><div align="left"> <h4>Courses</h4></div></th>
                        <th> <div align="center"><h4>Options</h4></div></th>
                     
                      
                    </tr>

                    @{ int count = 0;}
                    @foreach (var item in Model.Instructors)
                    {
                        count++;

                        string selectedRow = "";
                        if (item.ID == ViewBag.InstructorID)
                        {
                            selectedRow = "success";
                        }
                        <tr class="@selectedRow">
                            <td>@count</td>
                            <th width="20"></th>

                            <td>
                                <div align="left">
                                    @Html.DisplayFor(modelItem => item.FirstMidName)
                                    </div>

                              </td>
                            <td>
                                <div align="left">
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </div>
                            </td>
                            <td>
                                <div align="center">
                                    @Html.DisplayFor(modelItem => item.HireDate)
                                    </div>
                            </td>
                            
                            <th width="70"></th>
                            

                            <td>
                                <div >
                                    @{
                                        foreach (var course in item.Courses)
                                        {
                                            @course.CourseID @:   |   @course.Title <br />
                    }
                                    }
                                </div>
                            </td>

                            <td>
                                <div align="center">
                                  
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
</div></td>
                        </tr>
                                    }

                </table>
            </div>

        </div>
    </div>
</div>



