@model IEnumerable<OMSIFYP.Models.GenrateClass>

@{
    Layout = "~/Views/Shared/_LayoutInstructor.cshtml";

}
<link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet" href="~/css/multilpe-select.css">
<link type="text/css" rel="stylesheet" href="~/css/style.css">



<style>
    input[type=text] {
        width: 150px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
        height: 40px;
    }

        /* When the input field gets focus, change its width to 100% */
        input[type=text]:focus {
            width: 50%;
        }
</style>

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <span class="text-center">
                <div align="center"><p><h2>My Classes</h2></p></div>

            </span>
        </div>

        <div class="panel-body">

            <div class="row">


                <table class="table">



                    <tr>
                        <th>
                            <h4>No.</h4>
                        </th>
                      
                        <th> <div align="center"><h4>Class</h4></div></th>
                        <th><div align="center"> <h4>Section</h4></div></th>
                        <th><div align="center"> <h4>Department</h4></div></th>
                        <th width="220"><div align="center"> <h4>Courses</h4></div></th>
                        <th> <div align="center"><h4>Options</h4></div></th>


                    </tr>

                    @{ int count = 0;}
                    @foreach (var item in Model)
                    {
                        count++;

                        
                        <tr>
                            <td>@count</td>
                          

                            <td>
                                <div align="center">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </div>

                            </td>
                            <td>
                                <div align="center">
                                    @Html.DisplayFor(modelItem => item.Section)
                                </div>
                            </td>
                            <td>
                                <div align="center">
                                    @Html.DisplayFor(modelItem => item.department.Name)
                                </div>
                            </td>



                            <td>
                                <div align="center">
                                    @Html.DisplayFor(modelItem => item.course.Title)
                                </div>
                            </td>

                            <td>
                                <div align="center">
                                    @Html.ActionLink("View Students", "viewStudents", new { id = item.GenrateClassID,name  = item.Name, section =item.Section }) 
                                </div>
                            </td>
                        </tr>
                                        }

                </table>
            </div>

        </div>
    </div>
</div>








