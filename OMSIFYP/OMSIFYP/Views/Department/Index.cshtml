@model IEnumerable<OMSIFYP.Models.Department>
@{
    ViewBag.Title = "Departments";
  

}<br />


<link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet" href="~/css/multilpe-select.css">
<link type="text/css" rel="stylesheet" href="~/css/style.css">


<style>
    input[type=text] {
        width: 150px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
        height: 40px;
    }

        /* When the input field gets focus, change its width to 100% */
        input[type=text]:focus {
            width: 50%;
        }
</style>

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <span class="text-center">
                <div align="center"><p><h2>All Departments</h2></p></div>

            </span>
        </div>

        <div class="panel-body">

            <div class="row">
                <table width="1000">
                    <tr>
                        <td>&nbsp;</td>
                        <td colspan="6" class="31" align="left">@Html.ActionLink("Add New Department", "Create", "Department", null, new { @class = "btn btn-success btn-large" })</td>
                        <td colspan="2" align="right">
                            @using (Html.BeginForm("Index", "Department", FormMethod.Get))
                            {
                                <p>
                                    <b>
                                        <input type="text" name="searchName" placeholder="   Search By Name   ">
                                    </b>

                                </p>
                            }
                        </td>
                    </tr>

                </table>

                <table class="table">
                    <tr>
                        <th>
                            <h4>No.</h4>
                        </th>
                        <th>
                            <h4>Name</h4>
                        </th>
                        <th>
                            <h4>Budget</h4>
                        </th>
                        <th>
                            <h4>Start Date</h4>
                        </th>

                        <th>
                            <h4>Administrator</h4>
                        </th>
                        <th>
                            <div align="center"><h4>Options</h4></div>


                        </th>
                    </tr>
                    @{ int count = 0;}
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Budget)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Administrator.FullName)
                            </td>
                            <td>
                                <div align="center">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.DepartmentID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentID })                                </div>
                            </td>
                        </tr>
                    }

                </table>
            </div>

        </div>
    </div>
</div>



