@model OMSIFYP.Models.Department

@{
    ViewBag.Title = "Details";


}


<link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet" href="~/css/multilpe-select.css">
<link type="text/css" rel="stylesheet" href="~/css/style.css">


<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <span class="text-center">
                <div align="center"><p><h2>Department Details</h2></p></div>

            </span>
        </div>
        <div class="panel-body">
            <table width="372" height="220" align="center">
                <tr>
                    <td>Department Name</td>
                    <td>@Html.DisplayFor(model => model.Name)</td>

                </tr>

                <tr>
                    <td width="147">Total Budget</td>
                    <td width="209">@Html.DisplayFor(model => model.Budget)</td>
                </tr>
                <tr>
                    <td>Start date</td>
                    <td>@Html.DisplayFor(model => model.StartDate)</td>
                </tr>
                <tr>
                    <td>Head Name</td>
                    <td>@Html.DisplayFor(model => model.Administrator.FullName)</td>
                </tr>
                <tr>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <table width="985">




                            <tr>
                                <td width="124">
                                    @Html.ActionLink("Back to List", "Index", "Department", null, new { @class = "btn btn-warning btn-large" })
                                </td>
                                <td width="173">
                                    <div class="text-right">
                                        @Html.ActionLink("Edit", "Edit", new { id = Model.DepartmentID }, new { @class = "btn btn-primary btn-large" })
                                    </div>
                                </td>
                            </tr>
                        </table>
                    }


                </tr>

            </table>

        </div>
    </div>
</div>

