@model IEnumerable<OMSIFYP.Models.Course>

@{
    ViewBag.Title = "Courses";
}<br>


<link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet" href="~/css/multilpe-select.css">
<link type="text/css" rel="stylesheet" href="~/css/style.css">

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <span class="text-center">
                <div align="center"><p><h2>All Courses</h2></p></div>

            </span>
        </div>

        <div class="panel-body">

            <div class="row">
                <table width="1000">
                    <tr>
                        <td>&nbsp;</td>
                        <td colspan="6" class="31" align="left">@Html.ActionLink("Add New Course", "Create", "Course", null, new { @class = "btn btn-success btn-large" })</td>
                        <td colspan="2" align="right">
                            @using (Html.BeginForm())
                            {
                                <span>
                                    <h4>

                                        <b>Select Department:</b> @Html.DropDownList("SelectedDepartment", "All")
                                        <input type="submit" value="Go" class="btn btn-success btn-large " />

                                    </h4>
                                </span>
                            }
                        </td>
                    </tr>

                </table>

                <table class="table">
                    <tr>
                        <th>
                            <h4>No.</h4>
                        </th>
                        <th>
                            <h4>Course ID</h4>
                        </th>
                        <th>
                            <h4>Credit Hours</h4>
                        </th>
                        <th>
                            <h4>Course Title</h4>
                        </th>

                        <th>
                            <h4>Department</h4>
                        </th>
                        <th>
                            <div align="center"><h4>Options</h4></div>


                        </th>
                    </tr>
                    @{ int count = 0;}
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Credits)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Department.Name)
                            </td>
                            <td>
                                <div align="center">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.CourseID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.CourseID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.CourseID })
                                </div>
                            </td>
                        </tr>
                    }

                </table>
            </div>

        </div>
    </div>
</div>




