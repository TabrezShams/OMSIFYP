@model OMSIFYP.Models.Course

@{
    ViewBag.Title = "Edit";
}

<link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet" href="~/css/multilpe-select.css">
<link type="text/css" rel="stylesheet" href="~/css/style.css">








@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CourseID)
    <div class="row" align="center">
        
        <div class="panel panel-primary">


            @ViewBag.ErrorMessage
            <div class="panel-heading">
                <span class="text-center">

                    <div align="center"><p><h2>Edit Course</h2></p></div>
                </span>
            </div>
            <div class="panel-body">
                <table align="center" width="700" height="223" border="0">
                    <tr>
                        <td width="175"><h4>Number:</h4></td>
                        <td width="438">
                            <h4>
                                @Html.DisplayFor(model => model.CourseID)   
                            </h4>
                        </td>
                    </tr>
                    <tr>
                        <td><h4>Course Title:</h4></td>
                        <td>
                            <h4>
                                <input type="text" name="Title" required class="form-control" value="@Model.Title" placeholder="JAVA" />
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </h4>
                        </td>
                    </tr>
                    <tr>
                        <td><h4>Credit Hours:</h4></td>
                        <td>
                            <h4>
                                <input type="text" name="Credits" required class="form-control" value="@Model.Credits" placeholder="Credit Hours must be 0 to 5" />
                                @Html.ValidationMessageFor(model => model.Credits, "", new { @class = "text-danger" })
                            </h4>
                        </td>
                    </tr>
                    <tr>
                        <td><h4>Department:</h4></td>
                        <td>
                            <h4>
                                @Html.DropDownList("DepartmentID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DepartmentID, "", new { @class = "text-danger" })
                            </h4>
                        </td>
                    </tr>
                    <tr>
                        <td height="21">&nbsp;</td>
                        <td>&nbsp;</td>
                    </tr>
                    <tr>
                        <td height="31" align="left">@Html.ActionLink("Back to list", "Index", "Course", null, new { @class = "btn btn-warning btn-large" })</td>
                        <td align="right"><button type="submit" id="btnDelete" class="btn btn-success" onclick="confirm('Are you sure you want to Edit Course ')">Edit Course</button></td>
                    </tr>
                </table>

            </div>
        </div>
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
