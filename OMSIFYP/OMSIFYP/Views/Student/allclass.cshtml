@model IEnumerable<OMSIFYP.Models.EnrollStudent>

@{  
    ViewBag.Title = "Classes";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";

}
<link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet" href="~/css/multilpe-select.css">
<link type="text/css" rel="stylesheet" href="~/css/style.css">



<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <span class="text-center">
                <div align="center"><p><h2>My Classes</h2></p></div>

            </span>
        </div>

        <div class="panel-body">

            <div class="row">


                <table class="table">



                    <tr>
                        <th>
                            <h4>No.</h4>
                        </th>

                        <th> <div align="center"><h4>Class</h4></div></th>
                        <th> <div align="center"><h4>Section</h4></div></th>
                        <th><div align="center"> <h4>Instructor</h4></div></th>
                        <th><div align="center"> <h4>Department</h4></div></th>
                        <th ><div align="center"> <h4>Course</h4></div></th>


                    </tr>

                    @{ int count = 0;}
                    @foreach (var item in Model)
                    {
                        count++;


                        <tr>
                            <td>@count</td>


                            <td>
                                <div align="center">
                                    @Html.DisplayFor(modelItem => item.genrateClass.Name)


                                </div>

                            </td>
                            <td>
                                <div align="center">
                                    @Html.DisplayFor(modelItem => item.genrateClass.Section)                                </div>
                            </td>
                       
                            <td>
                                <div align="center">
                                    @Html.DisplayFor(modelItem => item.genrateClass.instructor.FirstMidName)
                                </div>
                            </td>
                            <td>
                                <div align="center">
                                    @Html.DisplayFor(modelItem => item.genrateClass.department.Name)
                                </div>
                            </td>



                            <td>
                                <div align="center">
                                    @Html.DisplayFor(modelItem => item.genrateClass.course.Title)
                                </div>
                            </td>
                      
                        </tr>
                    }

                </table>
            </div>

        </div>
    </div>
</div>

