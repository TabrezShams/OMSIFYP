@model OMSIFYP.Models.GenrateClass

@{
    ViewBag.Title = "Create New Class";
}

<link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet" href="~/css/multilpe-select.css">
<link type="text/css" rel="stylesheet" href="~/css/style.css">

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()



        <div class="row" align="center">
            <div class="panel panel-primary">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @ViewBag.ErrorMessage
                <div class="panel-heading">
                    <span class="text-center">

                        <div align="center"><p><h2>Generate New Class</h2></p></div>
                    </span>
                </div>
                <div class="panel-body">
                    <table align="center" width="700" height="223" border="0">
                        <tr>
                            <td width="175"><h4>Name:</h4></td>
                            <td width="438">
                                <h4>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </h4>
                            </td>
                        </tr>
                        <tr>
                            <td><h4>Section:</h4></td>
                            <td>
                                <h4>
                                    @Html.EnumDropDownListFor(model => model.Section, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Section, "", new { @class = "text-danger" })

                                </h4>
                            </td>
                        </tr>
                        <tr>
                            <td><h4>Course Name:</h4></td>
                            <td>
                                <h4>
                                    @Html.DropDownList("CourseID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CourseID, "", new { @class = "text-danger" })
                                </h4>
                            </td>
                        </tr>
                        <tr>
                            <td><h4>Instructor :</h4></td>
                            <td>
                                <h4>
                                    @Html.DropDownList("InstructorID", null,htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.InstructorID, "", new { @class = "text-danger" })
                                </h4>
                            </td>
                        </tr>


                        <tr>
                            <td><h4>Department:</h4></td>
                            <td>
                                <h4>
                                    @Html.DropDownList("DepartmentID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DepartmentID, "", new { @class = "text-danger" })
                                </h4>
                            </td>
                        </tr>
                        <tr>
                            <td height="21">&nbsp;</td>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td height="31" align="left">@Html.ActionLink("Back to list", "Index", "GenrateClasses", null, new { @class = "btn btn-warning btn-large" })</td>
                            <td align="right"><button type="submit" id="btnDelete" class="btn btn-success" onclick="confirm('Are you sure you want to Generate New Class ')">Generate Class</button></td>
                        </tr>
                    </table>

                </div>
            </div>
        </div>

     
    }
    

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


