@model IEnumerable<OMSIFYP.Models.EnrollStudent>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet" href="~/css/multilpe-select.css">
<link type="text/css" rel="stylesheet" href="~/css/style.css">


<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <span class="text-center">
                <div align="center"><p><h2>All Enrollments</h2></p></div>

            </span>
        </div>

        <div class="panel-body">

            <div class="row">
               
                
                <table class="table" border="0">
                    <tr>
                        <th>
                            <div align="center"><h4>No.</h4></div>
                            
                        </th>
                        <th>
                            <div align="center"><h4>Class Details</h4></div>
                            <h4></h4>
                        </th>
                       
                        <th>
                            <div align="center"><h4>Course Title</h4></div>
                            <h4></h4>
                        </th>
                        <th>
                            <div align="center"><h4>Student Name</h4></div>

                        </th>
                        
                        <th>
                            <div align="center"><h4>Options</h4></div>


                        </th>
                    </tr>
                    @{ int count = 0;}
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td><div align="center">@count</div></td>
                            <td>
                                <div align="center">
                                    @Html.DisplayFor(modelItem => item.genrateClass.Name) @Html.DisplayFor(modelItem => item.genrateClass.Section)
                                </div>
                            </td>
                            <td>
                                <div align="center">
                                    @Html.DisplayFor(modelItem => item.genrateClass.course.Title)
                                </div>


                            </td>
                            <td>
                                <div align="center">
                                    @Html.DisplayFor(modelItem => item.student.FirstMidName)
                                </div>
                                    </td>

                          
                            <td>
                                <div align="center">
@Html.ActionLink("Unroll Student", "Unroll", new { id = item.ID })                                </div>
                            </td>
                        </tr>
                    }

                </table>
            </div>

        </div>
    </div>
</div>



