@model IEnumerable<OMSIFYP.Models.Fine>

@{ ViewBag.Title = "Fine List";
    Layout = "~/Views/Shared/_LayoutAccountant.cshtml";
}



<link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet" href="~/css/multilpe-select.css">
<link type="text/css" rel="stylesheet" href="~/css/style.css">


<style>
    input[type=text] {
        width: 150px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
        height: 40px;
    }

        /* When the input field gets focus, change its width to 100% */
        input[type=text]:focus {
            width: 50%;
        }
    </style>


<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <span class="text-center">
                <div align="center"><p><h2>Fine List</h2></p></div>

            </span>
        </div>

        <div class="panel-body">

            <div class="row">
                <table >
                    <tr>
                        <td>&nbsp;</td>
                        <td class="col-xs-4">@Html.ActionLink("Add Fine", "Create", "Fines", null, new { @class = "btn btn-success btn-large" })</td>
                        <td class="col-xs-8" align="right">
                            @using (Html.BeginForm("Index", "Department", FormMethod.Get))
                            {
                                <p>
                                    <b>
                                        <input type="text" name="searchName" placeholder="   Search By Name   ">
                                    </b>

                                </p>
                            }
                        </td>
                    </tr>

                </table>

                <table class="table" style="text-align:center">

                    <tr>
                        <th>
                            <div align="center"><h4>No.</h4>
</div>
                        </th>
                        <th>
                            <div align="center"><h4>Name</h4>
</div>
                        </th>
                        <th>
                            <div align="center"><h4>Fine</h4>
</div>
                        </th>
                        <th>
                            <div align="center"><h4>Description</h4></div>

                        </th>

                        <th>
                            <div align="center"><h4>Options</h4></div>


                        </th>
                    </tr>
                    @{ int count = 0;}
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.student.FirstMidName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FineAmount)
                            </td>
                            <td>

                                @Html.DisplayFor(modelItem => item.FineDescription)
                            </td>


                            <td>
                                <div align="center">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.FineID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.FineID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.FineID })                                </div>
                            </td>
                        </tr>
                    }

                </table>
            </div>

        </div>
    </div>
</div>







