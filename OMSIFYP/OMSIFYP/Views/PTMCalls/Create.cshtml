@model OMSIFYP.Models.PTMCalls

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutInstructor.cshtml";
}
<link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet" href="~/css/multilpe-select.css">
<link type="text/css" rel="stylesheet" href="~/css/style.css">




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="row" align="center">
        <div class="panel panel-primary">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @ViewBag.ErrorMessage
            <div class="panel-heading">
                <span class="text-center">
                    <input type="hidden" name="Creater" value="@Session["userRole"].ToString() " />
                    <div align="center"><p><h2>Schedule PTM</h2></p></div>
                </span>
            </div>
            <div class="panel-body">
                <table align="center" width="700" height="223" border="0">
                    <tr>
                        <td width="175"><h4>Date of Meeting:</h4></td>
                        <td width="438">
                            <h4>
                                <input type="date" name="date" required class="form-control"  />
                                @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                            </h4>
                        </td>
                    </tr>
                    <tr>
                        <td><h4>Time Of Meeting:</h4></td>
                        <td>
                            <h4>
                                <input type="text" name="Titile" required class="form-control"  />
                                @Html.ValidationMessageFor(model => model.Titile, "", new { @class = "text-danger" })
                            </h4>
                        </td>
                    </tr>
                    <tr>
                        <td><h4>Message:</h4></td>
                        <td>
                            <h4>
                                <input type="text" name="Message" required class="form-control"  />
                                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                            </h4>
                        </td>
                    </tr>
                    <tr>
                        <td height="21">&nbsp;</td>
                        <td>&nbsp;</td>
                    </tr>
                    <tr>
                        <td height="31" align="left">@Html.ActionLink("Back to list", "Index", "PTMCalls", null, new { @class = "btn btn-warning btn-large" })</td>
                        <td align="right"><button type="submit" id="btnDelete" class="btn btn-success" onclick="confirm('Are you sure you want to Schedule Meeting ')">Schedule</button></td>
                    </tr>
                </table>

            </div>
        </div>
    </div>


}

